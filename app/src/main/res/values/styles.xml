<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/tingtingMain</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tingtingRadioButton">
        <item name="android:textColor">@drawable/segmenttation_button</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorPrimary">@color/tingtingMain</item>
        <item name="android:colorControlNormal">@color/tingtingSub</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored"/>

    <style name="ButtonBorder.Accent">
        <item name="android:background">@drawable/round_edge_pink35_nofill</item>
        <item name="android:textColor">@drawable/tingting</item>
        <item name="singleLine">true</item>
    </style>

    <style name="profile_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>

    <style name="SpinnerThemeSelected" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner_selected</item>
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>
</resources>
