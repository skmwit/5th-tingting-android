<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/dialogTitle"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@color/maintext"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_gray_bottom"
        android:layout_weight="1"
        android:text="신고 사유 선택" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/pic"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/subtext"
            android:layout_weight="1"
            android:text="사진 도용" />

        <TextView
            android:id="@+id/inappropriateContent"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/subtext"
            android:layout_weight="1"
            android:text="부적절한 사진 및 내용" />

        <TextView
            android:id="@+id/meanContent"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/subtext"
            android:layout_weight="1"
            android:text="욕설 및 비방" />

        <TextView
            android:id="@+id/counterfeitProfile"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/subtext"
            android:layout_weight="1"
            android:text="허위 프로필" />

        <TextView
            android:id="@+id/etc"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/subtext"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:text="기타" />
    </LinearLayout>
</LinearLayout>