<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/darkGray"
                android:endColor="@color/darkGray"
                android:angle="270"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/tingtingMain"
                android:endColor="@color/tingtingMain"
                android:angle="270"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="@color/darkGray"
                android:endColor="@color/darkGray"
                android:angle="270"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/tingtingMain"
                android:endColor="@color/tingtingMain"
                android:angle="270"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

</selector>